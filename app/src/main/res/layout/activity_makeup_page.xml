<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/saloonbackground3"
    android:layout_height="match_parent"

    tools:context=".SalonatActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_height="135dp"
        android:id="@+id/cattt"
        android:src="@drawable/makeupartisticon"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/cattt"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/createmyprofm"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            android:id="@+id/Suits"


            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            android:textSize="23dp"
            android:textColor="@android:color/white"
            android:fontFamily="casual"

            />
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/makeupar"
            android:fontFamily="casual"
            android:id="@+id/Dresses"

            android:layout_below="@+id/Suits"
            android:layout_marginLeft="25dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            android:textSize="23dp"

            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textStyle="italic"

            />

    </RelativeLayout>


</RelativeLayout>